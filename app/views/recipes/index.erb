<h1>Recipes</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>

    <tr>
      <% @recipes.each do |recipe| %>
        <td><%= recipe.name %></td>
        <td><%= link_to 'Show', recipe %></td>
        <% if recipe.user == current_user %>
          <td><a href="/recipes/<%= recipe.id %>">Edit</a></td>
          <td><a href="/recipes/<%= recipe.id %>/delete">Delete</a></td>
        <% else %>
          <td></td>
          <td></td>
        <% end %>
      <% end %>
    </tr>
  </tbody>
</table>

<br>

<a href="/recipes/new">New Recipe</a>
